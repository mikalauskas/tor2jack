<!-- views/search.handlebars -->

{{!< layouts/main}}
{{#if searchResults.length}}
  <h2>Search Results for "{{query}}"</h2>
  <ul class="list-group">
    {{#each searchResults}}
      <li class="list-group-item">
        {{name}} - <a href="/download?magnetURI={{magnetUri}}">Download</a>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No results found for "{{query}}"</p>
{{/if}}

